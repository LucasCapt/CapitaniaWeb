@using Capitania.Web.Models.Common.Modals
@model Capitania.Web.Models.TConfiguracao.TConfiguracaoDetalhesModalViewModel
@{
    Layout = null;
}
@section styles
    {
}

@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditConfiguration")))



<div class="modal-body">
    <form name="ConfigurationEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Configuracao.Id" />
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="configname" disabled type="text" name="Codigo" required maxlength="5" minlength="3" class="validate form-control" value="@Model.Configuracao.Codigo">
                        <label for="configname" class="form-label">@L("TConfigurations.Code")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="configdesc" type="text" name="Descricao" required maxlength="150" minlength="2" class="validate form-control" value="@Model.Configuracao.Descricao">
                        <label for="configdesc" class="form-label">@L("TConfigurations.Description")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="config-value" name="Valor" class="validate form-control" required maxlength="150" minlength="2" value="@Model.Configuracao.Valor">
                        <label for="config-value" class="form-label">@L("TConfigurations.Value")</label>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/TConfiguracao/_EditConfigModal.js" asp-append-version="true"></script>
